<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upper_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffe0af">

        <TextView
            android:id="@+id/your_title_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Редактирование и удаление"
            android:textColor="@color/black"/>
    </RelativeLayout>



    <!-- ListView для отображения данных -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@+id/bottom_bg"
        android:layout_below="@+id/upper_bg"
        android:choiceMode="multipleChoice"

        />


    <RelativeLayout
        android:id="@+id/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="#ffe0af">

        <!-- Кнопка редактирования -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/but_collor"
            android:text="Редактировать"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            />

        <!-- Кнопка удаления -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/but_collor"
            android:text="Удалить"
            android:textColor="#000000"
            android:layout_below="@+id/editButton"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            />

        <!-- Кнопка закрытия -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/but_collor"
            android:text="Закрыть"
            android:textColor="#000000"
            android:layout_below="@+id/deleteButton"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            />
    </RelativeLayout>
</RelativeLayout>